# KSTAY Environment Variables (EXAMPLE)
# Put real values into .env.local (never commit)

NEXT_PUBLIC_SITE_URL=
AUTH_URL=
# NextAuth: canonical URL (required to avoid CLIENT_FETCH_ERROR / HTML instead of JSON)
# Dev (port 3001): NEXTAUTH_URL=http://localhost:3001
# Prod: NEXTAUTH_URL=https://yourdomain.com
NEXTAUTH_URL=
AUTH_SECRET=
DATABASE_URL=
DATABASE_URL_UNPOOLED=
PAYMENT_PROVIDER=
NEXT_PUBLIC_PAYMENT_PROVIDER=

# Google OAuth (설정 시 로그인 버튼으로 실제 Google 계정 연동, docs/GOOGLE_LOGIN.md 참고)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# 개발 시 OAuth 없이 쿠키로 역할만 테스트 (production에서는 비활성)
# KSTAY_ENABLE_DEMO_AUTH=true

# Kakao OAuth (REST API 키를 CLIENT_ID로 사용)
KAKAO_CLIENT_ID=
KAKAO_CLIENT_SECRET=

# LINE Login (Channel ID / Channel secret)
LINE_CLIENT_ID=
LINE_CLIENT_SECRET=

# Email (Resend)
RESEND_API_KEY=
EMAIL_FROM=KSTAY <noreply@yourdomain.com>

# Google Maps (later)
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=

# 주소 자동완성: KAKAO_REST_API_KEY 있으면 Kakao Local 사용, 없으면 Nominatim(OSM) 사용
KAKAO_REST_API_KEY=

# PortOne (웹훅 기반 예약 확정, docs/PORTONE_PAYMENT_FLOW.md 참고)
PORTONE_STORE_ID=
PORTONE_CHANNEL_KEY=
PORTONE_API_SECRET=
PORTONE_WEBHOOK_SECRET=
NEXT_PUBLIC_PORTONE_PAY_METHOD=
